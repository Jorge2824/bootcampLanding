---
import Avatr from "../Avatar/Avatr.astro";
import Github from "../Icons/Github.astro";

interface Props {
  src?: string;
  name?: string;
  description?: string;
  github?: string;
  isCard?: boolean
}

const { src, name, description, github, isCard } = Astro.props

---

<div class={`flex flex-col justify-center align-center h-80 gap-8 ${isCard && 'card-body border'}`}>
  <Avatr src={src} />
  <h4 class="text-center">{name}</h4>
  <div class="h-12">
    {description &&  <p>{description}</p>}
  </div>
  <div class="flex justify-center">
    <a href={github}>
      <Github />
    </a>
  </div>
</div>
