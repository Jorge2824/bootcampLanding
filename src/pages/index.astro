---
import Layout from '../layouts/Layout.astro';
import Navbar from '../components/Navbar/Navbar.astro';
import CTA from '../components/CTA/CTA.astro';

import Hero from '../components/Hero/Hero.astro';
---

<Layout title='Welcome to Astro.'>
  <div class='root'>
    <Navbar />
    <main>
      <header></header>
      <section>
        <CTA nameCta='Click me' text='' href='' />
        <script>
          import { mixPanelLocal } from '../ts/services/Mixpanel';
          import { $ } from '../ts/utils';

          $('[data-cta="Click me"]')?.addEventListener(
            'click',
            ({ target }) => {
              if (!(target instanceof HTMLAnchorElement)) return;

              mixPanelLocal().trackCta(target.textContent || '');
            }
          );
        </script>
      </section>
      <Hero />
    </main>
    <script src='../ts/main.ts'></script>
  </div>
</Layout>
